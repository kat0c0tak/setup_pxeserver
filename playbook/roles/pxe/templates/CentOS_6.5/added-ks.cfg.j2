# Kickstart file automatically generated by anaconda.

#version=DEVEL
install
url --url=http://{{ HTTP_SERVER_IP }}/kickstart/CentOS_6.5/iso

# Use text installation
text

# Locale.
lang en_US.UTF-8
keyboard us
timezone --utc Asia/Tokyo

# Network. DHCP. IPv6 is disabled.
network --device=eth0 --bootproto=dhcp --noipv6 --onboot yes 

# Repository.
#repo --name="CentOS"  --baseurl=nfs:192.168.122.1:/kickstart/CentOS_6.5 --cost=100

# User Authsorization.
authconfig --enableshadow --passalgo=sha512

# root password is 'root'
rootpw root

# Firewall & SELinux are disabled.
firewall --disabled
selinux --disabled

#
# Add partition to LVM.
#
ignoredisk --only-use=sda
bootloader --location=none
part /boot --noformat --onpart=sda1
part pv.253994 --noformat --onpart=sda2
volgroup VolGroup --noformat
logvol swap --fstype="swap" --name=lv_swap --vgname=VolGroup --noformat
logvol / --fstype=ext4 --name=lv_root_centos65 --vgname=VolGroup --size=2000 --maxsize=2000


#
# Post script.
#
%post --log=/root/ks-post.log
echo This is kickstart post log.
%end

#
# Minimam.
#
%packages --nobase
%end

